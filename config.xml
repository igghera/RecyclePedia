<?xml version='1.0' encoding='utf-8'?>
<widget id="au.com.recyclesmart.recyclepedia"
        version="1.0.0"
        versionCode="11"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>RecyclePedia</name>
    <description>
        A wiki app about recycling
    </description>
    <author
      email="enquiries@recyclesmart.com.au"
      href="http://recyclesmart.com.au">
      RecycleSmart Pty Ltd
    </author>

    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.NetworkManager" />
    </feature>

    <preference name="Permissions" value="none" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="Orientation" value="portrait" />
    <access origin="*" />

    <gap:plugin name="com.ionic.keyboard" version="1.0.2" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
</widget>
